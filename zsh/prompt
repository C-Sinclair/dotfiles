# Lambda Prompt
function get_pwd(){
  git_root=$PWD
  while [[ $git_root != / && ! -e $git_root/.git ]]; do
    git_root=$git_root:h
  done
  if [[ $git_root = / ]]; then
    unset git_root
    prompt_short_dir=%~
  else
    parent=${git_root%\/*}
    prompt_short_dir=${PWD#$parent/}
  fi
  echo $prompt_short_dir
}

function get_animal(){
  local ANIMALS=(ğŸ¼ ğŸ¦¡ ğŸ¦˜ ğŸ¨ ğŸ» ğŸ¦‡ ğŸ¿ ğŸ‡ ğŸ¦ ğŸ˜ ğŸ¦’ ğŸ¦™ ğŸ‚ ğŸƒ ğŸ‘)
  length=${#ANIMALS[@]}
  index=$((RANDOM % 10)) * $length
  echo ANIMALS[$index]
}


PROMPT='ğŸ”¥ $(get_pwd) ğŸ”Œ$(git_prompt_info) $(get_animal) ğŸ»

